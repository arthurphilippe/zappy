{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [

		{
			"name": "(gdb) Attach",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceFolder}/unit_tests.out",
			"processId": "${command:pickProcess}",
			"MIMode": "gdb",
			"setupCommands": [
			    {
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			    },
			]
		},
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/zappy_server",
			"args": ["-p", "133", "-x", "13", "-y", "124", "-n", "pprout", "pmdr", "-c", "56", "-f", "55"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "build debug",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{"text": "-gdb-set follow-fork-mode child"}
			]
		},
		{
			"name": "(gdb) Launch Criterion",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/unit_tests.out",
			"args": ["-j", "1", "--verbose", "--debug=idle"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "build criterion",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
